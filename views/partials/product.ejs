<!-- Shop -->
	<div class="innerf-pages section">
		<div class="fh-container mx-auto">
			<div class="row my-lg-5 mb-5">
				<!-- grid left -->
				<div class="side-bar col-lg-3">
					<!--preference -->

					<% include ../partials/category_sidebar %>

					<!-- // preference -->
					<div class="search-hotel">
						<h3 class="shopf-sear-headits-sear-head">
							<span>Brand</span> in focus</h3>
						<form action="#" method="post">
							<input type="search" placeholder="search here" name="search" required="">
							<input type="submit" value="Search">
						</form>
					</div>


				</div>
				<!-- //grid left -->
				<!-- grid right -->
				<div class="col-lg-9 mt-lg-0 mt-5 right-product-grid">
					<!-- card group  -->
					<div class="card-group">
						<!-- card -->
						<% if(products.length === 0 ){ %>
							 <h1>No Product</h1>
							<% } else { %>
						<% products.forEach(function(data) { %>
						<div class="col-lg-3 col-sm-6 p-0">
							<div class="card product-men p-3">
								<div class="men-thumb-item">
									<img src="/images/products/<%= data.image1%>" alt="img" class="card-img-top">
									<div class="men-cart-pro">
										<div class="inner-men-cart-pro">
											<a href="/product/single/<%= data._id%>" class="link-product-add-cart">Quick View</a>
										</div>
									</div>
								</div>
								<!-- card body -->
								<div class="card-body  py-3 px-2">
									<h5 class="card-title text-capitalize"><%= data.product_name%></h5>
									<div class="card-text d-flex justify-content-between">
										<p class="text-dark font-weight-bold ">$<span id="product_price<%=data._id%>"><%= data.price%></span></p>
										<p class="line-through">$<%= data.prev_price%></p>
									</div>
								</div>
								<!-- card footer -->
								<div class=" card-footer ">
												<div class="row">
													<div class="col-md-6">
														<div style="float:left;">
															<span style="color:#ff7043"><%= data.discount ? data.discount + "% OFF" : "" %></span>
														</div>
													</div>
													<div class="col-md-6">
														<div style="float:right">
															<button  class="hub-cart phub-cart btn addToCart" id="<%= data._id%>" >
																<i class="fa fa-cart-plus" aria-hidden="true"></i>
															</button>
														</div>
													</div>
												</div>
								</div>
							</div>
						</div>
						<% }) %>
						<% } %>


			</div>
			<% if (pages && pages > 0) { %>
				 <% if( totalRecord > 12 ) {%>
    <ul class="pagination justify-content-center" style="margin-top:10px;">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">First</a></li>
        <% } else { %>
        <li class="page-item" ><a href="/products/<%= selected %>" class="page-link" >First</a></li>
        <% } %>

        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Previous</a></li>
        <% } else { %>
        <li class="page-item"><a href="/products/<%= selected %>?page=<%= Number(current) - 1 %>" class="page-link" >Previous</a></li>
        <% } %>

        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>

        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="page-item active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li class="page-item"><a href="/products/<%= selected %>?page=<%= i %>" class="page-link"><%= i %></a></li>
        <% } %>

        <% } %>

        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Next</a></li>
        <% } else { %>
        <li class="page-item"><a href="/products/<%= selected %>?page=<%= Number(current) + 1 %>" class="page-link">Next</a></li>
        <% } %>

        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Last</a></li>
        <% } else { %>
        <li class="page-item"><a href="/products/<%= selected %>?page=<%= pages %>" class="page-link">Last</a></li>
        <% } %>
    </ul>
    <% } %>
		  <% } %>

		</div>
		</div>
		</div>
		</div>
		<!--// Shop -->
